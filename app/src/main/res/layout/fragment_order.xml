<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EDEBE9"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">


        <TextView

            android:id="@+id/tv_order_chexian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:text="车险订单"
            android:textColor="@color/selectcolor"
            android:textSize="12sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_order_youhuijua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:text="优惠劵订单"
            android:textColor="@color/unselectcolor"
            android:textSize="12dp"
            android:textStyle="bold"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divid"/>

    <FrameLayout
        android:id="@+id/fl_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>


</LinearLayout>
