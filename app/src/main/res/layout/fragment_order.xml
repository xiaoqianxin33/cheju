<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EDEBE9"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">


        <TextView

            android:id="@+id/tv_order_chexian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:text="车险订单"
            android:textColor="@color/selectcolor"
            android:textSize="12sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_order_youhuijua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:text="优惠劵订单"
            android:textColor="@color/unselectcolor"
            android:textSize="12dp"
            android:textStyle="bold"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ADA9A4"/>

    <TextView
        android:id="@+id/tv_nopolicy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂无订单"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_chexian_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
